APP_NAME="Masar"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# ===== Database (عبّها بقيمك المحلية) =====
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=masar
DB_USERNAME=root
DB_PASSWORD=

# ===== Cache / Session / Queue =====
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_COOKIE=masar_session
SESSION_SAME_SITE=lax
SESSION_SECURE_COOKIE=false     # في الإنتاج اجعلها true إذا HTTPS
QUEUE_CONNECTION=sync

# ===== Mail (اختياري: عبّها لاحقًا عند الحاجة) =====
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="no-reply@masar.test"
MAIL_FROM_NAME="Masar"

# ===== Filesystem =====
FILESYSTEM_DISK=public

# ===== تنبيه مهم =====
# لا تضع أي مفاتيح/كلمات مرور حقيقية هنا. هذا ملف مثال فقط.
# في الخادم: انسخ هذا الملف إلى .env وعدّل القيم هناك.
